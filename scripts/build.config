# Build configuration for Ospy

# Application information
APP_NAME=ospy
APP_DESCRIPTION="Lightweight website monitoring tool"
APP_AUTHOR="Ravikant Chauhan"

# Build settings
DEFAULT_VERSION=dev
BINARY_NAME=ospy
BUILD_DIR=dist

# Supported platforms
PLATFORMS=\
	linux/amd64 \
	linux/arm64 \
	darwin/amd64 \
	darwin/arm64 \
	windows/amd64

# Go build flags
GOFLAGS=-trimpath
LDFLAGS_EXTRA=-s -w

# Release settings
RELEASE_DIR=releases
ARCHIVE_FORMAT=tar.gz
WINDOWS_ARCHIVE_FORMAT=zip
